<h1>People you may know</h1>
<br>        
 <% @not_friends.each do |new_friend| %>
        <div class="columns">
            <div class="column is-four-fifths">
                <div class="card">
                    <div class="card-content">
                        <div class="media">
                            <div class="media-left">
                                <figure class="image is-48x48">
                                    <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder Image">
                                </figure>
                            </div>
                            <div class="media-content">
                                <p class="title is-4"><%= new_friend.username %></p>
                                <p class="subtitle is-6"><%= new_friend.email %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="coulmn is-one-fifth is-flex is-flex-direction-column is-justify-content-center">
                <%= link_to 'Send Invite', send_path(new_friend.id), class: 'button is-link is-outlined' %>                    
            </div>
        </div>        
<% end %>