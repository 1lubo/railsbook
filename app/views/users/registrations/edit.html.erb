<% if resource.errors.any? %>
  <% flash['alert'] = [] %>  
  <% resource.errors.full_messages.each do |message| %>
    <% flash['alert'] << message %>
  <% end %>  
<% end %>

<div class="hero">
  <div class="hero-body">
    <div class="container">
      <div class="column is-two-fifths is-offset-one-quarter">
        <h2 class="title is-2">Edit <%= resource_name.to_s.humanize %></h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>  
          
          <div class="field">
            <%= image_tag user_avatar(resource, 80) %>     
            <div class="file">
              <label class="file-label">
              
                <%= f.file_field :avatar, class: 'file-input' %>
                <span class="file-cta">
                  <span class="file-icon"><%= material_icon.file_upload %></span>
                  <span class="file-label">Choose a file...</span>
                </span>
                </label>
            </div>
          </div>
        
          <div class="field">
            <div class="control">
              <%= f.label :username, class: 'label' %>
              <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'input' %>
            </div>
          </div>
        
          <div class="field">
            <div class="control">
              <%= f.label :email, class: 'label' %>
              <%= f.email_field :email, autocomplete: "email", class: 'input' %>
            </div>
          </div>
        
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
        
          <div class="field">
            <div class="control">
              <%= f.label :password, class: 'label' %> <i>(leave blank if you don't want to change it)</i><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'input' %>
            </div>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
        
          <div class="field">
            <div class="control">
              <%= f.label :password_confirmation, class: 'label' %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
            </div>
          </div>
        
          <div class="field">
            <div class="control">
              <%= f.label :current_password, class: 'label' %> <i>(we need your current password to confirm your changes)</i><br />
              <%= f.password_field :current_password, autocomplete: "current-password", class: 'input' %>
            </div>
          </div>
        
          <div class="actions">
            <div class="control">
              <%= f.submit "Update", class: 'button is-link is-fullwidth' %>
            </div>
          </div>
        <% end %>
        <br>
        <div class="field">
          <div class="control">
            <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'button is-danger is-outlined is-fullwidth' %></p>  
          </div>
        </div>
        <%= link_to "Back", :back %>        
      </div>
    </div>
  </div>
</div>



