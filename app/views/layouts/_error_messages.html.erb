
<% if flash && !flash.empty? %>
 <% flash.each do |key, message| %>
 <% if message.class == Array%>
  <% message.each do |m| %>
      <div class="alert alert-<%= key %> alert-dismissible fade show" role="alert">        
        <h6><strong><%= m %></strong></h6>              
      </div>
  <% end %>
  <%else %>
    <div class="alert alert-<%= key %> alert-dismissible fade show" role="alert">        
        <h6><strong><%= message %></strong></h6>              
      </div>
      <% end %>
 <% end %>  
<% end %>